{
  "$schema": "https://biomejs.dev/schemas/2.4.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "html": {
    "experimentalFullSupportEnabled": true,
    "formatter": {
      "indentScriptAndStyle": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!!**/.*/**/*",
      "!!**/docs/src/pages/index.svelte",
      "!!**/docs/src/pages/framed/ComboBox/ComboBoxSlot.svelte",
      "!!**/docs/src/pages/framed/Dropdown/DropdownSlot.svelte",
      "!!**/docs/src/pages/framed/MultiSelect/MultiSelectSlot.svelte"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noAccumulatingSpread": "error",
        "noAwaitInLoops": "error",
        "noDelete": "error",
        "noDynamicNamespaceImportAccess": "error",
        "noNamespaceImport": "error",
        "noReExportAll": "error",
        "useTopLevelRegex": "error"
      },
      "correctness": {
        "noUnreachable": "error",
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedLabels": "error",
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noCommaOperator": "error",
        "noForEach": "error",
        "noUselessConstructor": "error",
        "noUselessEmptyExport": "error",
        "noUselessFragments": "error",
        "noUselessLabel": "error",
        "noUselessLoneBlockStatements": "error",
        "noUselessRename": "error",
        "noUselessSwitchCase": "error",
        "noUselessTypeConstraint": "error",
        "useArrowFunction": "error",
        "useLiteralKeys": "error",
        "noImportantStyles": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "useAwait": "error"
      },
      "style": {
        "noImplicitBoolean": "error",
        "noNegationElse": "error",
        "noParameterAssign": "error",
        "noRestrictedGlobals": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "vitest": {
                "message": "Vitest functions are automatically imported."
              }
            }
          }
        },
        "noUnusedTemplateLiteral": "error",
        "useDefaultParameterLast": "error",
        "useExponentiationOperator": "error",
        "useNamingConvention": "off",
        "useNodejsImportProtocol": "error",
        "useNumberNamespace": "error",
        "useSingleVarDeclarator": "error",
        "noCommonJs": "error",
        "noDescendingSpecificity": "off"
      },
      "nursery": {
        "useFind": "error",
        "noForIn": "error",
        "noFloatingPromises": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "overrides": [
    {
      "includes": ["css/*.css"],
      "formatter": { "enabled": false },
      "linter": { "enabled": false }
    },
    {
      "includes": ["**/*.svelte"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off",
            "noUnusedVariables": "off",
            "noSelfAssign": "off"
          },
          "complexity": {
            "noUselessUndefinedInitialization": "off"
          },
          "suspicious": {
            "noGlobalAssign": "off"
          },
          "a11y": {
            "noAutofocus": "off",
            "noSvgWithoutTitle": "off",
            "useAltText": "off",
            "useAnchorContent": "off",
            "useAriaPropsForRole": "off",
            "useValidAriaRole": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.test.ts"],
      "linter": {
        "rules": {
          "performance": {
            "useTopLevelRegex": "off"
          }
        }
      }
    },
    {
      "includes": ["src/ImageLoader/ImageLoader.svelte"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedGlobals": "off"
          }
        }
      }
    }
  ]
}
