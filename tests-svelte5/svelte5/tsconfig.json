{
  "compilerOptions": {
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "carbon-components-svelte": ["../../types"],
      "carbon-components-svelte/*": ["../../types/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.svelte"]
}
